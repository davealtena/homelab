{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>davealtena/homelab//.renovate/autoMerge.json5",
    "github>davealtena/homelab//.renovate/changelogs.json5",
    "github>davealtena/homelab//.renovate/customManagers.json5",
    "github>davealtena/homelab//.renovate/grafanaDashboards.json5",
    "github>davealtena/homelab//.renovate/groups.json5",
    "github>davealtena/homelab//.renovate/labels.json5",
    "github>davealtena/homelab//.renovate/overrides.json5",
    "github>davealtena/homelab//.renovate/semanticCommits.json5",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Amsterdam)"
  ],
  "platformAutomerge": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "schedule": ["* 0-6 * * *"],
  "ignorePaths": [
    "**/*.sops.*",
    "**/clusterconfig/**"
  ],
  "flux": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"]
  },
  "helmfile": {
    "fileMatch": ["(^|/)helmfile\\.ya?ml(?:\\.j2)?$"]
  },
  "kubernetes": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"]
  },
  "kustomize": {
    "fileMatch": ["(^|/)kustomization\\.ya?ml(?:\\.j2)?$"]
  },
  "pip_requirements": {
    "fileMatch": ["(^|/)[\\w-]*requirements(-\\w+)?\\.(txt|pip)(?:\\.j2)?$"]
  }
}
